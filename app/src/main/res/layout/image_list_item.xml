<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_photo_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="258dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <!--    android:src="@drawable/ic_favorite"-->

    <ImageView
        android:id="@+id/likeImgclicked"
        android:layout_width="41dp"
        android:layout_height="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/item_image_view"
        app:layout_constraintEnd_toEndOf="@+id/item_image_view"
        app:srcCompat="@drawable/like_animation"
        tools:ignore="MissingConstraints" />
    <!--        android:src="@drawable/ic_baseline_favorite_24"-->

</androidx.constraintlayout.widget.ConstraintLayout>
